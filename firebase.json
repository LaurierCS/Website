{
    "firestore": {
        "rules": "./emulators/config/firestore.rules",
        "indexes": "./emulators/config/firestore.indexes.json"
    },
    "hosting": {
        "public": "build",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
    },
    "storage": {
        "rules": "./emulators/config/storage.rules"
    },
    "functions": [
        {
            "source": "./firebase/functions",
            "codebase": "default",
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log"
            ]
        }
    ],
    "emulators": {
        "auth": {
            "port": 9099
        },
        "functions": {
            "port": 5001
        },
        "firestore": {
            "port": 8080
        },
        "storage": {
            "port": 9199
        },
        "ui": {
            "enabled": true
        },
        "singleProjectMode": true
    }
}
